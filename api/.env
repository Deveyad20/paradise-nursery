# Development Environment Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Database Configuration (SQLite for development)
DB_DIALECT=sqlite
SQLITE_DB_PATH=./data/paradise_nursery.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-123456789
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-in-production-987654321
REFRESH_TOKEN_EXPIRES_IN=30d

# Email Configuration (disabled for development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=test@example.com
EMAIL_PASS=test-password
EMAIL_FROM=noreply@paradisenursery.com

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=false
ENABLE_CACHING=false